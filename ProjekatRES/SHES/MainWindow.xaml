<Window x:Class="SHES.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHES"
        mc:Ignorable="d"
        Title="MainWindow" Height="636.34" Width="1130.709">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="187" Margin="10,53,0,0" VerticalAlignment="Top" Width="330" ItemsSource="{Binding Baterije}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Jedinstveno Ime" Binding="{Binding JedinstvenoIme}" Width="*" FontSize="12"></DataGridTextColumn>
                <DataGridTextColumn Header="Maksimalna snaga" Binding="{Binding MaksimalnaSnaga}" Width="*" FontSize="12"></DataGridTextColumn>
                <DataGridTextColumn Header="Kapacitet" Binding="{Binding Kapacitet}" Width="*" FontSize="12"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="labelSnagaSunca" Content="" HorizontalAlignment="Left" Height="40" Margin="143,272,0,0" VerticalAlignment="Top" Width="94" FontSize="20"/>
        <Label Content="Snaga sunca :" HorizontalAlignment="Left" Height="40" Margin="10,272,0,0" VerticalAlignment="Top" Width="128" FontSize="20"/>

    </Grid>
</Window>

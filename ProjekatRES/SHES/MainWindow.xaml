                        <DataGrid HorizontalAlignment="Left" Height="187" Margin="50,30,0,0" VerticalAlignment="Top" Width="300" ItemsSource="{Binding SolarniPaneli}" AutoGenerateColumns="False" IsReadOnly="True">

                                                        <Label Content="Maksimalna snaga:" FontSize="12"></Label>
                                                        <Label Content="{Binding MaksimalnaSnaga}" FontSize="12"></Label>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                            </DataGrid>
                    </StackPanel>
                </StackPanel>
